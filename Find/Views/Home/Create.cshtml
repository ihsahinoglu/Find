@model Find.Models.Candidate






	<div class="loader"></div>
	<div class="wrapper">
		
		<partial name="Navbar" />
		<!-- header title start -->
		<section class="inner-header-title blank">
			<div class="container">
				<h1>Özgeçmiş Oluştur</h1>
			</div>
		</section>
		<div class="clearfix"></div>
		<!-- header title end -->
		<!-- general detail start -->

		<div class="row">
		<form asp-action="create" enctype="multipart/form-data">
				<div asp-validation-summary="ModelOnly" class="text-danger" ></div>


				<div class="detail-pic js">
					<div class="box">
					<input type="file" name="formFile" id="Image" class="inputfile" />
						<label for="Image"><i class="fa fa-upload" aria-hidden="true"></i><span></span></label>
					</div>
				</div>


				<section class="full-detail">
					<div class="container">
						<div class="row bottom-mrg extra-mrg">

							<h2 class="detail-title">Genel Bilgiler</h2>

							<div class="col-md-6 col-sm-6">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-envelope"></i></span>
									<input asp-for="Name" type="text" class="form-control" placeholder="adınız">
									<span asp-validation-for="Name"></span>
								</div>
							</div>

							<div class="col-md-6 col-sm-6">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-envelope"></i></span>
									<input asp-for="Surname" type="text" class="form-control" placeholder="soyadınız">
									<span asp-validation-for="Surname"></span>
								</div>
							</div>

							<div class="col-md-6 col-sm-6">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-envelope"></i></span>
									<input asp-for="Age" type="text" class="form-control" placeholder="yaşınız">
									<span asp-validation-for="Age"></span>
								</div>
							</div>
							<div class="col-md-6 col-sm-6">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-flag"></i></span>
									<select asp-for="MaritalStatus" class="form-control">
										<span asp-validation-for="MaritalStatus"></span>
										<option>medeni durumunuz</option>
										<option>evli</option>
										<option>bekar</option>
									</select>
								</div>
							</div>
							<div class="col-md-6 col-sm-6">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-flag"></i></span>
									<select asp-for="MilitaryStatus" class="form-control">
										<span asp-validation-for="MilitaryStatus"></span>
										<option>Askerlik Durumu</option>
										<option>yaptı/muaf</option>
										<option>yapmadı</option>
									</select>
								</div>
							</div>
							<div class="col-md-6 col-sm-6">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-envelope"></i></span>
									<input asp-for="Email" type="text" class="form-control" placeholder="email addresiniz">
									<span asp-validation-for="Email"></span>
								</div>
							</div>
							<div class="col-md-6 col-sm-6">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-phone"></i></span>
									<input asp-for="Phone" type="text" class="form-control" placeholder="telefon numaranız">
									<span asp-validation-for="Phone"></span>
								</div>
							</div>
							<div class="col-md-6 col-sm-6">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-globe"></i></span>
									<input asp-for="Adress" type="text" class="form-control" placeholder="adresiniz">
									<span asp-validation-for="Adress"></span>
								</div>
							</div>
							<div class="col-md-6 col-sm-6">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-birthday-cake"></i></span>
									<input asp-for="BirthDate" type="text" id="dob" data-lang="en" data-large-mode="true" data-min-year="2017" data-max-year="2020" data-disabled-days="08/17/2017,08/18/2017" data-id="datedropper-0" data-theme="my-style" class="form-control" placeholder="Doğum Tarihiniz">
									<span asp-validation-for="BirthDate"></span>
								</div>
							</div>
							<div class="col-md-6 col-sm-6">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-flag"></i></span>
									<select asp-for="Gender" class="form-control">
										<span asp-validation-for="Gender"></span>
									<option>Cinsiyet</option>
										<option>erkek</option>
										<option>kadın</option>
									</select>
								</div>
							</div>



						</div>
						<div class="row bottom-mrg extra-mrg">

							<h2 class="detail-title">Eğitim Bilgileri</h2>
							<div class="extra-field-box">
								<div class="multi-box">
									<div class="input-group">
										<span class="input-group-addon"><i class="fa fa-flag"></i></span>
										<select asp-for="EducationalStatus" class="form-control input-lg">
											<span asp-validation-for="EducationalStatus"></span>
											<option>Eğitim Seviyesi</option>
											<option>ilköğretim</option>
											<option>lise</option>
											<option>önlisans</option>
											<option>lisans</option>
											<option>yüksek lisans</option>
										</select>
									</div>

									<div class="input-group">
										<span class="input-group-addon"><i class="fa fa-globe"></i></span>
										<input asp-for="GraduationScore" type="text" class="form-control" placeholder="mezuniyet puanınız">
										<span asp-validation-for="GraduationScore"></span>
									</div>

								</div>

							</div>
						</div>
						<div class="row bottom-mrg extra-mrg">

							<h2 class="detail-title">Meslek Bilgileri</h2>
							<div class="extra-field-box">
								<div class="multi-box">
									<div class="input-group">
										<span class="input-group-addon"><i class="fa fa-flag"></i></span>
										<select asp-for="Profession" class="form-control input-lg">
											<span asp-validation-for="Profession"></span>
											<option>Meslek</option>
											<option>Öğrenci</option>
											<option>Öğretmen</option>
											<option>Mühendis</option>
											<option>Yönetici</option>
											<option>İşçi</option>
											<option>Memur</option>
											<option>Diğer</option>
										</select>
									</div>
								</div>

							</div>
						</div>
						<div class="row bottom-mrg extra-mrg">

							<h2 class="detail-title">Deneyim</h2>
							<div class="extra-field-box">
								<div class="multi-box">
									<div class="extra-field-box">
										<div class="multi-box">
											<div class="input-group">
												<span class="input-group-addon"><i class="fa fa-flag"></i></span>
												<select asp-for="Experience" class="form-control input-lg">
													<span asp-validation-for="Experience"></span>
													<option>Tecrübe</option>
													<option>yok</option>
													<option>1-3 yıl</option>
													<option>3-5 yıl</option>
													<option>5-10 yıl</option>
													<option>10+ yıl</option>
												</select>
											</div>
										</div>
									</div>

								</div>

							</div>


						</div>


						<div class="row bottom-mrg extra-mrg">

							<h2 class="detail-title">Yabancı Dil</h2>
							<div class="extra-field-box">
								<div class="multi-box">
									<div class="extra-field-box">
										<div class="multi-box">
											<div class="input-group">
												<span class="input-group-addon"><i class="fa fa-globe"></i></span>
												<select asp-for="Language" class="form-control input-lg">
													<span asp-validation-for="Language"></span>
												<option>Yabancı Dil</option>
													<option>İngilizce</option>
													<option>Almanca</option>
													<option>Fransızca</option>
													<option>Arapça</option>
													<option>Rusça</option>
													<option>Diğer</option>
												</select>

											</div>
											<div class="input-group">
												<span class="input-group-addon"><i class="fa fa-flag"></i></span>
												<select asp-for="LanguageLevel" class="form-control input-lg">
													<span asp-validation-for="LanguageLevel"></span>
													<option>yabancı dil düzeyiniz</option>
													<option>yok</option>
													<option>A1</option>
													<option>A2</option>
													<option>B1</option>
													<option>B2</option>
												</select>
											</div>
										</div>
									</div>

								</div>

							</div>


						</div>


						<div class="row bottom-mrg extra-mrg">

							<h2 class="detail-title">Referanslarınız</h2>
							<div class="extra-field-box">
								<div class="multi-box">
									<div class="extra-field-box">
										<div class="multi-box">
											<div class="input-group">
												<span class="input-group-addon"><i class="fa fa-globe"></i></span>
												<input asp-for="Reference" type="text" class="form-control" placeholder="referanslarınız">
												<span asp-validation-for="Reference"></span>
											</div>

										</div>
									</div>

								</div>

							</div>
						</div>

						<div class="row bottom-mrg extra-mrg">

							<h2 class="detail-title">Kendinizi Anlatınız</h2>
							<div class="extra-field-box">
								<div class="multi-box">
									<div class="extra-field-box">
										<div class="multi-box">
											<div class="input-group">
												<span class="input-group-addon"><i class="fa fa-globe"></i></span>
												<textarea asp-for="Explanation" type="text" class="form-control" placeholder="açıklama"></textarea>
												<span asp-validation-for="Explanation"></span>
											</div>

										</div>
									</div>

								</div>

							</div>
						</div>

						<div class="row bottom-mrg extra-mrg">

							<div class="col-md-12">
								<button type="submit" value="create" class="btn btn-success btn-primary small-btn">Bilgileri Kaydet</button>

							</div>

						</div>
					</div>




				</section>

			</form>
		</div>
		<!-- scripts
		================================================== -->
		<script type="text/javascript" src="~/assets/plugins/js/jquery.min.js"></script>
		<script type="text/javascript" src="~/assets/plugins/js/viewportchecker.js"></script>
		<script type="text/javascript" src="~/assets/plugins/js/bootstrap.min.js"></script>
		<script type="text/javascript" src="~/assets/plugins/js/bootsnav.js"></script>
		<script type="text/javascript" src="~/assets/plugins/js/select2.min.js"></script>
		<script type="text/javascript" src="~/assets/plugins/js/wysihtml5-0.3.0.js"></script>
		<script type="text/javascript" src="~/assets/plugins/js/bootstrap-wysihtml5.js"></script>
		<script type="text/javascript" src="~/assets/plugins/js/datedropper.min.js"></script>
		<script type="text/javascript" src="~/assets/plugins/js/dropzone.js"></script>
		<script type="text/javascript" src="~/assets/plugins/js/loader.js"></script>
		<script type="text/javascript" src="~/assets/plugins/js/owl.carousel.min.js"></script>
		<script type="text/javascript" src="~/assets/plugins/js/slick.min.js"></script>
		<script type="text/javascript" src="~/assets/plugins/js/gmap3.min.js"></script>
		<script type="text/javascript" src="~/assets/plugins/js/jquery.easy-autocomplete.min.js"></script>
		<!-- date dropper js-->
		<script src="#"></script>

		<!-- custom js -->
		<script src="~/assets/js/custom.js"></script>

		<script>
			$('#dob').datedropper();
		</script>

		<script>
			$('#exp-start').datedropper();
		</script>

		<script>
			$('#exp-end').datedropper();
		</script>

		<script>
			$('#edu-start').datedropper();
		</script>

		<script>
			$('#edu-end').datedropper();
		</script>
		<script src="~/assets/js/jquery.style.switcher.js"></script>
		<script type="text/javascript">
			$(document).ready(function () {
				$('#styleoptions').styleswitcher();
			});
		</script>
		<script>
			function openrightmenu() {
				document.getelementbyıd("rightmenu").style.display = "block";
			}

			function closerightmenu() {
				document.getelementbyıd("rightmenu").style.display = "none";
			}
		</script>
		<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
		<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
		@section scripts {
			@{
				await Html.RenderPartialAsync("_validationscriptspartial");
			}
		}
	</div>

